<%= form_for(@static_field) do |f| %>
  <% if @static_field.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@static_field.errors.count, "error") %> prohibited this static_field from being saved:</h2>

      <ul>
      <% @static_field.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :biography, :class => "control-label col-sm-2" %>
    <div class="col-sm-10">
      <div class="row">
        <%= f.hidden_field :biography, :class => "hidden_body" %>
        <div class="form-control summernote"><%=raw @static_field.biography %></div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :biography_kz, :class => "control-label col-sm-2" %>
    <div class="col-sm-10">
      <div class="row">
        <%= f.hidden_field :biography_kz, :class => "hidden_body", :value => "" %>
        <div class="form-control summernote">
          <% if params[:action] == 'edit' %>
            <%=raw @static_field.biography_kz.force_encoding('utf-8') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :biography_ru, :class => "control-label col-sm-2" %>
    <div class="col-sm-10">
      <div class="row">
        <%= f.hidden_field :biography_ru, :class => "hidden_body", :value => "" %>
        <div class="form-control summernote">
          <% if params[:action] == 'edit' %>
            <%=raw @static_field.biography_ru.force_encoding('utf-8') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.submit 'SUBMIT', :class => "form-control btn btn-success form_submit" %>
  </div>
<% end %>


<script type="text/javascript">
  $(function(){
    $('.form_submit').click(function(e){
        e.preventDefault();
        
        $('.summernote').each(function(){
           $(this).parent().find('.hidden_body').val($(this).summernote('code'));
        });
        
        $(this).closest("form").submit();
    });
  });
  
</script>